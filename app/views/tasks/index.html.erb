<h1>My Tasks</h1>

<ul class="list-group">
  <% @tasks.each do |task| %>
    <li class="list-group-item">
      <% if task.completed? %>
        <i class='far fa-check-square'></i>
      <% else %>
        <i class='far fa-square'></i>
      <% end %>
      <%= link_to task.title, task_path(task.id) %>
    </li>
  <% end %>
</ul>

<i class="fas fa-plus"></i>
<%= link_to "Add a new task", "/tasks/new"%>
